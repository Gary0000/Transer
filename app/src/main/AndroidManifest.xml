<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scott.example">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.scott.transer.TranserService" />

        <activity android:name=".ui.SimpleDownloadActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".ui.SimpleUploadActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".ui.CreateTaskActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".ui.SimpleTaskListActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".BaseActivity" />
        <activity android:name=".ui.FileListActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".ui.SimpleTaskEventBusActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".ui.TaskGroupActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".ui.SimpleFormPartFileUploadActivity"
            android:configChanges="orientation|screenSize"/>
    </application>

</manifest>